@model IEnumerable<TomasGreen.Web.Areas.Import.ViewModels.OnthewayArticlesViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Article.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContainerNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedToArrive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Article.Name)
            </td>
            <th>
                @Html.DisplayFor(model => item.ContainerNumber)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedToArrive)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PurchasedArticleWarehouse.ID">Receive</a> 
            </td>
        </tr>
}
    </tbody>
</table>
