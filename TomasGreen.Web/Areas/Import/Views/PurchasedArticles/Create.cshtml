@inject TomasGreen.Web.CustomLocalizer localizer
@model TomasGreen.Web.Areas.Import.ViewModels.SavePurchasedArticleViewModel
@{
    ViewData["Title"] = @localizer["Purchase articles"];
}
<h3>@localizer["Purchase articles"]</h3>


<!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">-->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>


<br />

<div class="row">
    <form asp-action="Create">
        <div class="row">
            &nbsp;&nbsp;<a asp-action="Index"><span class="glyphicon glyphicon-hand-left"></span> </a> &nbsp;| &nbsp;<a asp-action="Create" asp-route-id="@Model?.PurchasedArticle?.ID"><span class="glyphicon glyphicon-refresh"></span></a>
            <span> &nbsp;&nbsp; | &nbsp;&nbsp;</span><input type="submit" name="SavePurchasedArticle" id="SavePurchasedArticle" value='@localizer["Save"]' class='@((Model?.PurchasedArticle?.ID == 0)? "btn btn-primary": "btn btn-warning")' onclick="return ValidatePurchasedArticle()" />
            @{
            if (Model?.PurchasedArticle?.ID > 0)
            {
                <span> &nbsp;&nbsp; | &nbsp;</span><a asp-action="DeletePurchasedArticle" asp-route-id="@Model?.PurchasedArticle?.ID" onclick="return window.confirm('Are you sure you want to delete this purchase with @Model?.PurchasedArticle?.PurchasedArticleDetails?.Count() rows?')"><span class="glyphicon glyphicon-trash alert-danger"></span></a>
            }
            }


        </div>
        <input asp-for="@Model.ActiveTab" class="form-control"   type="hidden"/>
        <input asp-for="@Model.PurchasedArticle.ID" class="form-control" style="visibility:hidden" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>@ViewBag.ErrorMessage</div>
        <div class="container-fluid">
            <div class="row">


                <div class="col-sm-8">
                    <div class="form-group col-sm-3">
                        <label asp-for="@Model.PurchasedArticle.Date" class="control-label"></label>
                        <input asp-for="@Model.PurchasedArticle.Date" class="form-control" />
                        <span asp-validation-for="@Model.PurchasedArticle.Date" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-3">
                        <label asp-for="@Model.PurchasedArticle.CompanyID" class="control-label"></label>
                        <select asp-for="@Model.PurchasedArticle.CompanyID" class="form-control" asp-items="ViewBag.CompanyID">
                            <option>Select</option>
                        </select>
                        <span asp-validation-for="@Model.PurchasedArticle.CompanyID" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-2">
                        <label asp-for="@Model.PurchasedArticle.CurrencyID" class="control-label"></label>
                        <select asp-for="@Model.PurchasedArticle.CurrencyID" class="form-control" asp-items="ViewBag.CurrencyID">
                            <option>Select</option>
                        </select>
                        <span asp-validation-for="@Model.PurchasedArticle.CurrencyID" class="text-danger"></span>
                    </div>

                    <div class="form-group col-sm-3">
                        <label asp-for="@Model.PurchasedArticle.Description" class="control-label"></label>
                        <textarea asp-for="@Model.PurchasedArticle.Description" class="form-control" cols="5"></textarea>
                        <span asp-validation-for="@Model.PurchasedArticle.Description" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-sm-4" style="background-color:ghostwhite;">
                    <div class="row">
                        <div class="bg-warning">&nbsp;<b>Filled by system</b></div>
                        <div class="col-md-6">
                            <span>Tot. price: </span><span>@Model.PurchasedArticle.GetTotalPrice()</span>
                        </div>
                        <div class="col-md-6">
                            <span>Arrived: </span>
                            <span>
                                @((Model.PurchasedArticle.Arrived == true) ? localizer["yes"] : localizer["no"])
                            </span>
                        </div>
                        <div class="col-md-6">
                            <span>Has issue:</span>
                            @{
                            if (Model.PurchasedArticle.HasIssue)
                            {
                                <span class="alert-danger">
                                    @localizer["yes"]
                                </span>

                        }
                        else
                        {
                            <span>
                                @localizer["no"]
                            </span>
                    }
                            }


                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!--Tab go -->

        <div id="PurchasedArticleTaps" class="tab" role="tabpanel">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs PurchasedArticle_Taps" role="tablist">
                <li id="ArticleDetail_Tab" class="active" role="presentation"><a role="tab" aria-controls="home" href="#ArticleDetails" data-toggle="tab" onclick=" return ChangeActiveTab(0)"> @localizer["Articles"] &nbsp;</a></li>
                <li id="CostDetail_Tab" role="presentation"><a role="tab" aria-controls="Costs" href="#CostDetails" data-toggle="tab" onclick=" return ChangeActiveTab(1)"> @localizer["Costs"] &nbsp;</a></li>
                <li id="ShortageDetail_Tab" role="presentation"><a role="tab" aria-controls="Shortage" href="#ShortageDetails" data-toggle="tab" onclick=" return ChangeActiveTab(2)"> @localizer["Shortage"] &nbsp;</a></li>
                <li id="ContainerDetail_Tab" role="presentation"><a role="tab" aria-controls="Containers" href="#ContainerDetails" data-toggle="tab" onclick=" return ChangeActiveTab(3)"> @localizer["Container"] &nbsp;</a></li>
                <li id="Report_Tab" role="presentation"><a role="tab" aria-controls="Report" href="#Report" data-toggle="tab" onclick=" return ChangeActiveTab(4)"> @localizer["Report"] &nbsp;</a></li>

            </ul>
            <!-- Tab panes -->
            <div class="tab-content tabs">
                <div class="tab-pane fade in active" id="ArticleDetails" role="tabpanel">
                    <div><br /></div>
                    <div id="PurchasedArticleDetail_Mess"></div>
                    <input asp-for="@Model.PurchasedArticleDetail.ID" class="form-control" style="display:none;" />
                    <input asp-for="@Model.PurchasedArticle.ID" class="form-control"  style="display:none;" />
                    <div class="col-md-12">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="@Model.PurchasedArticleDetail.WarehouseID" class="control-label">@localizer["Warehouse"]</label>
                                <select asp-for="@Model.PurchasedArticleDetail.WarehouseID" class="form-control" asp-items="ViewBag.WarehouseID">
                                    <option>@localizer["Select"]</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="@Model.PurchasedArticleDetail.ArticleID" class="control-label">@localizer["Article"]</label>
                                <select asp-for="@Model.PurchasedArticleDetail.ArticleID" class="form-control" asp-items="ViewBag.ArticleID">
                                    <option>@localizer["Select"]</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="@Model.PurchasedArticleDetail.QtyPackages" class="control-label">Package</label>
                                <input asp-for="@Model.PurchasedArticleDetail.QtyPackages" class="form-control" />
                                <span asp-validation-for="@Model.PurchasedArticleDetail.QtyPackages" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="@Model.PurchasedArticleDetail.QtyExtra" class="control-label">Extra</label>
                                <input asp-for="@Model.PurchasedArticleDetail.QtyExtra" class="form-control" />
                                <span asp-validation-for="@Model.PurchasedArticleDetail.QtyExtra" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="@Model.PurchasedArticleDetail.UnitPrice" class="control-label">Price</label>
                                <input asp-for="@Model.PurchasedArticleDetail.UnitPrice" class="form-control" />
                                <span asp-validation-for="@Model.PurchasedArticleDetail.UnitPrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <div class="form-group">
                                <br />
                                <input type="submit" name="SavePurchasedArticleDetail" id="SavePurchasedArticleDetail" value='@((Model?.PurchasedArticleDetail?.ID == 0)? localizer["Add"]: localizer["Edit"])' class='@((Model?.PurchasedArticleDetail?.ID == 0)? "btn btn-primary": "btn btn-warning")' onclick="return ValidatePurchasedArticleDetail()" />
                            </div>
                        </div>
                    </div>
                    <div><br /></div>
                    <div id="SavedPurchasedArticleDetailsList">
                        @{
                        if (Model.PurchasedArticle.PurchasedArticleDetails?.Count() > 0)
                        {
                            @Html.Partial("_PurchasedArticleDetailsPartialView.cshtml", Model.PurchasedArticle.PurchasedArticleDetails)
                    }
                        }

                    </div>
                </div>
                <div class="tab-pane fade in " id="CostDetails" role="tabpanel">
                    <div id="CostsPlaceHolder">
                        <div><br /></div>
                        <div id="PurchasedArticleCostDetail_Mess"></div>
                        <div class="col-md-12">
                            <div class="form-group col-sm-2">
                                <label asp-for="@Model.PurchasedArticleCostDetail.PurchasedArticleCostTypeID" class="control-label">@localizer["Cost type"]</label>
                                <select asp-for="@Model.PurchasedArticleCostDetail.PurchasedArticleCostTypeID" class="form-control" asp-items="ViewBag.CostTypeID">
                                    <option>Select</option>
                                </select>
                                <span asp-validation-for="@Model.PurchasedArticleCostDetail.CurrencyID" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-3">
                                <label asp-for="@Model.PurchasedArticleCostDetail.CompanyID" class="control-label"></label>
                                <select asp-for="@Model.PurchasedArticleCostDetail.CompanyID" class="form-control" asp-items="ViewBag.CostCompanyID">
                                    <option>Select</option>
                                </select>
                                <span asp-validation-for="@Model.PurchasedArticleCostDetail.CompanyID" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-2">
                                <label asp-for="@Model.PurchasedArticleCostDetail.CurrencyID" class="control-label"></label>
                                <select asp-for="@Model.PurchasedArticleCostDetail.CurrencyID" class="form-control" asp-items="ViewBag.CostCurrencyID">
                                    <option>Select</option>
                                </select>
                                <span asp-validation-for="@Model.PurchasedArticleCostDetail.CurrencyID" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-2">
                                <label asp-for="@Model.PurchasedArticleCostDetail.Amount" class="control-label"></label>
                                <input asp-for="@Model.PurchasedArticleCostDetail.Amount" class="form-control" />
                                <span asp-validation-for="@Model.PurchasedArticleCostDetail.Amount" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-2">
                                <label asp-for="@Model.PurchasedArticleCostDetail.Description" class="control-label"></label>
                                <textarea asp-for="@Model.PurchasedArticleCostDetail.Description" class="form-control"></textarea>
                                <span asp-validation-for="@Model.PurchasedArticleCostDetail.Description" class="text-danger"></span>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    <br />
                                    <input type="submit" name="SavePurchasedArticleCostDetail" id="SavePurchasedArticleCostDetail" value='@((Model.PurchasedArticleCostDetail.ID == 0)? localizer["Add"]: localizer["Edit"])' class='@((Model.PurchasedArticleCostDetail.ID == 0)? "btn btn-primary": "btn btn-warning")' />
                                </div>
                            </div>
                        </div>

                        <div><br /></div>
                        <div id="SavedPurchasedArticleCostDetailsList">
                            @{
                            if (Model.PurchasedArticle.PurchasedArticleCostDetails?.Count() > 0)
                            {
                                @Html.Partial("_PurchasedArticleCostDetailsPartialView.cshtml", Model.PurchasedArticle.PurchasedArticleCostDetails)
                            }
                            }
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade in " id="ShortageDetails" role="tabpanel">
                    <div id="ShortagePlaceHolder">
                        <div><br /></div>
                        <div id="PurchasedArticleShortageDealingDetail_Mess"></div>
                        <div class="col-md-12">
                            <div class="form-group col-sm-3">
                                <label asp-for="@Model.PurchasedArticleShortageDealingDetail.CompanyID" class="control-label"></label>
                                <select asp-for="@Model.PurchasedArticleShortageDealingDetail.CompanyID" class="form-control" asp-items="ViewBag.ShortageDealingCompanyID">
                                    <option>Select</option>
                                </select>
                                <span asp-validation-for="@Model.PurchasedArticleShortageDealingDetail.CompanyID" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-2">
                                <label asp-for="@Model.PurchasedArticleShortageDealingDetail.CurrencyID" class="control-label"></label>
                                <select asp-for="@Model.PurchasedArticleShortageDealingDetail.CurrencyID" class="form-control" asp-items="ViewBag.ShortageDealingCurrencyID">
                                    <option>Select</option>
                                </select>
                                <span asp-validation-for="@Model.PurchasedArticleShortageDealingDetail.CurrencyID" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-2">
                                <label asp-for="@Model.PurchasedArticleShortageDealingDetail.Amount" class="control-label"></label>
                                <input asp-for="@Model.PurchasedArticleShortageDealingDetail.Amount" class="form-control" />
                                <span asp-validation-for="@Model.PurchasedArticleShortageDealingDetail.Amount" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-2">
                                <label asp-for="@Model.PurchasedArticleShortageDealingDetail.Description" class="control-label"></label>
                                <textarea asp-for="@Model.PurchasedArticleShortageDealingDetail.Description" class="form-control"></textarea>
                                <span asp-validation-for="@Model.PurchasedArticleShortageDealingDetail.Description" class="text-danger"></span>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    <br />
                                    <input type="submit" name="SavePurchasedArticleShortageDealingDetail" id="SavePurchasedArticleShortageDealingDetail" value='@((Model.PurchasedArticleShortageDealingDetail.ID == 0)? localizer["Add"]: localizer["Edit"])' class='@((Model.PurchasedArticleShortageDealingDetail.ID == 0)? "btn btn-primary": "btn btn-warning")' />
                                </div>
                            </div>
                        </div>

                        <div><br /></div>
                        <div id="SavedPurchasedArticleShortageDealingDetailsList">
                            @{
                                if (Model.PurchasedArticle.PurchasedArticleShortageDealingDetails?.Count() > 0)
                                {
                                  @Html.Partial("_PurchasedArticleShortageDealingDetailsPartialView.cshtml", Model.PurchasedArticle.PurchasedArticleShortageDealingDetails)
                                }
                             }
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade in " id="ContainerDetails" role="tabpanel">
                    <div id="ContainerPlaceHolder">
                        <div><br /></div>
                        <div id="PurchasedArticleCostDetail_Mess"></div>
                        <div class="col-md-12">
                            <div class="form-group col-sm-2">
                                <label asp-for="@Model.PurchasedArticleContainerDetail.ContainerNumber" class="control-label"></label>
                                <input asp-for="@Model.PurchasedArticleContainerDetail.ContainerNumber" class="form-control" />
                                <span asp-validation-for="@Model.PurchasedArticleContainerDetail.ContainerNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    <br />
                                    <input type="submit" name="SavePurchasedArticleContainerDetail" id="SavePurchasedArticleContainerDetail" value='@((Model.PurchasedArticleContainerDetail?.ID == 0)? localizer["Add"]: localizer["Edit"])' class='@((Model.PurchasedArticleContainerDetail.ID == 0)? "btn btn-primary": "btn btn-warning")' />
                                </div>
                            </div>
                        </div>
                            <div><br /></div>
                            <div id="SavedPurchasedArticleContainerDetailsList">
                                @{
                                    if (Model.PurchasedArticle.PurchasedArticleContainerDetails?.Count() > 0)
                                    {
                                        @Html.Partial("_PurchasedArticleContainerDetailsPartialView.cshtml", Model.PurchasedArticle.PurchasedArticleContainerDetails)
                                    }
                                }

                            </div>
                        </div>
                        <div class="tab-pane fade in " id="Report" role="tabpanel">
                            <div id="ReportPlaceHolder">
                                <div class="row">
                                   
                                </div>
                            </div>
                        </div>
                    </div>
        </div>

        <!-- Tab stop -->
    </form>

</div>

<script src="~/js/PurchasedArticle.js"></script>