@model TomasGreen.Web.Areas.Import.ViewModels.SavePurchasedArticleWarehouseViewModel

@{
    ViewData["Title"] = "Purchase articles";
}

<h2>Buy articles</h2>


<hr />
<div class="row">
    <form asp-action="Create">
        <input asp-for="@Model.PurchasedArticle.ID" class="form-control" style="visibility:hidden" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-sm-12">
            <div class="form-group col-sm-2">
                <label asp-for="@Model.PurchasedArticle.Date" class="control-label"></label>
                <input asp-for="@Model.PurchasedArticle.Date" class="form-control" />
                <span asp-validation-for="@Model.PurchasedArticle.Date" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-2">
                <label asp-for="@Model.PurchasedArticle.ArticleID" class="control-label"></label>
                <select asp-for="@Model.PurchasedArticle.ArticleID" class="form-control" asp-items="ViewBag.ArticleID">
                    <option>Select</option>
                </select>
                <span asp-validation-for="@Model.PurchasedArticle.ArticleID" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-2">
                <label asp-for="@Model.PurchasedArticle.CompanyID" class="control-label"></label>
                <select asp-for="@Model.PurchasedArticle.CompanyID" class="form-control" asp-items="ViewBag.CompanyID">
                    <option>Select</option>
                </select>
                <span asp-validation-for="@Model.PurchasedArticle.CompanyID" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-2">
                <label asp-for="@Model.PurchasedArticle.ContainerNumber" class="control-label"></label>
                <input asp-for="@Model.PurchasedArticle.ContainerNumber" class="form-control" />
                <span asp-validation-for="@Model.PurchasedArticle.ContainerNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-2">
                <label asp-for="@Model.PurchasedArticle.Description" class="control-label"></label>
                <textarea asp-for="@Model.PurchasedArticle.Description" class="form-control"></textarea>
                <span asp-validation-for="@Model.PurchasedArticle.Description" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-2">
                <br />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </div>
        <div class="col-sm-12">
            <div class="form-group col-sm-2">
                <label asp-for="@Model.PurchasedArticle.UnitPrice" class="control-label"></label>
                <input asp-for="@Model.PurchasedArticle.UnitPrice" class="form-control" />
                <span asp-validation-for="@Model.PurchasedArticle.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-2">
                <label asp-for="@Model.PurchasedArticle.TollFee" class="control-label"></label>
                <input asp-for="@Model.PurchasedArticle.TollFee" class="form-control" />
                <span asp-validation-for="@Model.PurchasedArticle.TollFee" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-2">
                <label asp-for="@Model.PurchasedArticle.PenaltyFee" class="control-label"></label>
                <input asp-for="@Model.PurchasedArticle.PenaltyFee" class="form-control" />
                <span asp-validation-for="@Model.PurchasedArticle.PenaltyFee" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-2">
                <label asp-for="@Model.PurchasedArticle.TransportCost" class="control-label"></label>
                <input asp-for="@Model.PurchasedArticle.TransportCost" class="form-control" />
                <span asp-validation-for="@Model.PurchasedArticle.TransportCost" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-2">
                <label asp-for="@Model.PurchasedArticle.ExpectedToArrive" class="control-label"></label>
                <input asp-for="@Model.PurchasedArticle.ExpectedToArrive" class="form-control"  />
                <span asp-validation-for="@Model.PurchasedArticle.ExpectedToArrive" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-2">
                <label asp-for="@Model.PurchasedArticle.TotalPrice" class="control-label"></label>
                <input asp-for="@Model.PurchasedArticle.TotalPrice" class="form-control" disabled />
                <span asp-validation-for="@Model.PurchasedArticle.TotalPrice" class="text-danger"></span>
            </div>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.PurchasedArticleWarehouses != null)
    {
        <table id="TimeReportTable" class="table table-striped .table-responsive table-sm ">
            <thead class="bg-primary">
                <tr>
                    <td>
                        <label asp-for="@Model.PurchasedArticleWarehouses[0].QtyPackages" class="control-label Timelabel"></label>
                    </td>
                    <td>
                        <label asp-for="@Model.PurchasedArticleWarehouses[0].QtyExtra" class="control-label Timelabel"></label>
                    </td>
                    <td>
                        <label asp-for="@Model.PurchasedArticleWarehouses[0].Warehouse.Name" class="control-label Timelabel">Sends to</label>
                    </td>


                </tr>
            </thead>
            @for (var i = 0; i < Model.PurchasedArticleWarehouses.Count; i++)
        {

            <tr>

                <td>
                    <div class="form-group">
                        <input asp-for="@Model.PurchasedArticleWarehouses[i].QtyPackages" class="form-control TimeInput" />
                        <span asp-validation-for="@Model.PurchasedArticleWarehouses[i].QtyPackages" class="text-danger"></span>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <input asp-for="@Model.PurchasedArticleWarehouses[i].QtyExtra" class="form-control TimeInput" />
                        <span asp-validation-for="@Model.PurchasedArticleWarehouses[i].QtyExtra" class="text-danger"></span>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <p>@Model.PurchasedArticleWarehouses[i].Warehouse.Name</p>
                        <input asp-for="@Model.PurchasedArticleWarehouses[i].WarehouseID" class="form-control" type="hidden" />
                    </div>
                </td>

            </tr>

    }
        </table>


}
    </form>
   

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<table class="model-state">
    @foreach (var item in ViewContext.ViewData.ModelState)
    {
        if (item.Value.Errors.Any())
        {
            <tr>
                <td><b>@item.Key</b></td>
                <td>@((item.Value == null || item.Value.Errors.Count == 0) ? "<null>" : item.Value.RawValue)</td>
                <td>@(string.Join("; ", item.Value.Errors.Select(x => x.ErrorMessage)))</td>
            </tr>
        }
    }
</table>