@inject TomasGreen.Web.CustomLocalizer localizer

@model TomasGreen.Model.Models.Order

<div>
    <h4>@localizer["Order pick list"]</h4>
    <div class="container table table-striped">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6">
                    <div class="container-fluid">
                        <img src="~/images/TomasGreen.jpg" width="100" height="80" class="rounded-circle float-left" />
                    </div>
                    
                </div>
                <div class="col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">@localizer["Order"]</div>
                        <div class="panel-body">
                            <div><span>@localizer["No."] </span> <span>@Model.ID</span></div>
                            <div><span>@localizer["Date"] </span> <span>@Model.OrderDate.ToShortDateString()</span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div></div>
        <div class="table">
        <div class="row table">
            <div class="col-md-12" style="background-color:tan;">
                <div class="col-md-1"><label>@localizer["No."]</label></div>
                <div class="col-md-3"><label>@localizer["Warehouse"]</label></div>
                <div class="col-md-3"><label>@localizer["Article"]</label></div>
                <div class="col-md-3"><label>@localizer["Packages"]</label></div>
                <div class="col-md-2"><label>@localizer["Extra"]</label></div>
            </div>
        </div>
        @{
            var counter = 1;
            var packages = 0;
            decimal extra = 0;

            @foreach (var item in Model.OrderDetails)
            {
                    <div class="row table  table-striped">
                        <div class="col-md-12">
                            <div class="col-md-1">@counter</div>
                            <div class="col-md-3">@localizer[item.Warehouse.Name]</div>
                            <div class="col-md-3">@localizer[item.Article.Name]</div>
                            <div class="col-md-3">@item.QtyPackages</div>
                            <div class="col-md-2">@item.QtyExtra</div>
                        </div>
                    </div>
                packages += item.QtyPackages;
                extra += item.QtyExtra;
                counter++;
            }
            <div class="row table  table-striped">
                <div class="col-md-12" style="background-color:tan;">
                    <div class="col-md-1"><label></label></div>
                    <div class="col-md-3"><label></label></div>
                    <div class="col-md-3"><label></label></div>
                    <div class="col-md-3"><label>@packages</label></div>
                    <div class="col-md-2"><label>@extra</label></div>
                </div>
            </div>
        }
       </div>
    </div>
 </div>

